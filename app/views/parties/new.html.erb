<%= form_with url: '/viewing-party', local: true do |f| %>

<%= f.label :title %>
<%= f.text_field :title, value: params[:title], :readonly => true %><br><br>

<%= f.hidden_field :runtime, :value => params[:runtime] %>

<%= f.hidden_field :api_id, :value => params[:api_id] %>

<%= f.hidden_field :logo, :value => params[:logo] %>

<%= f.label :duration %>
<%= f.number_field :duration, value: params[:runtime] %><br><br>

<%= f.label :date %>
<%= f.date_field :date, min: Date.today, max: Date.today.next_year(4) %><br><br>

<%= f.label :time %>
<%= f.time_field :time %><br><br>

<%= f.collection_check_boxes :party_guests, current_user.friends, :id, :username %>

<%= f.submit %>
<% end %>
