<%= form_with url: '/viewing-party', model: @party, local: true do |f| %>
  
  
  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :date %>
    <p>Using Format MM-DD-YYYY</p>
  <%= f.text_field :date %>

  <%= f.label :time %>
  <%= f.text_field :time %>

  <% current_user.friends.each do |friend| %>
  
    <%= f.label :friend_name, "#{friend.username}" %>
    <%= f.check_box "#{friend.username}" %>
    <%= f.hidden_field :friend_id, :value => friend.id %>
  <% end %>

  

  <%= f.submit %>
<% end %>