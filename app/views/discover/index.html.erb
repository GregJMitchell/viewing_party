<center>
  <h1>Welcome <%= current_user.username %>!</h1>

  <%= button_to 'Find Top Rated Movies', '/movies/top40', method: :get %> <br>
  
  <h3>OR</h3> <br>

  <%= form_tag "/movies/search?q=#{:search}", method: :get do %>
